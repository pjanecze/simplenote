<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pj.simpleNote"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="14" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <receiver android:name="SimpleNoteWidgetProvider" android:label="@string/label_list">
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
		    </intent-filter>
		    <meta-data android:name="android.appwidget.provider"
		               android:resource="@xml/simplenote_widget_info" />
		</receiver>
		<receiver android:name="SimpleNoteWidgetProvider" android:label="@string/label_stack">
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
		    </intent-filter>
		    <meta-data android:name="android.appwidget.provider"
		               android:resource="@xml/simplenote_widget_stack_info" />
		</receiver>
		<service android:name="SimpleNoteWidgetService"
             android:permission="android.permission.BIND_REMOTEVIEWS" />
		<activity android:name="NoteActivity" android:theme="@style/Theme.NoteTheme"></activity>
		<activity android:name="NoteManagerActivity" android:theme="@style/Theme.NoteTheme"></activity>
    </application>

</manifest>