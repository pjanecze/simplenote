<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="list_item" >
        <item name="android:paddingLeft">@dimen/list_row_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/list_row_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/list_row_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/list_row_vertical_margin</item>
    </style>
    <style name="stack_item">
        <item name="android:background">@drawable/stack_item_background</item>
    </style>
    
    <style name="Theme.NoteTheme" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.NoteAnimation</item>
    </style>
    
    <style name="DateTextStyle" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/list_item_secondary_color</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="TitleTextStyle" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textColor">@color/list_item_primary_color</item>
    </style>
    
    <!-- just defines top layer "Animation" -->
	<style name="Animation" />
	
	
	
